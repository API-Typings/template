{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"declarationDir": "dist/typings",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": [
			"ESNext"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
	]
}